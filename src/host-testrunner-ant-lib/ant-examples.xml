<project>
    <rbm-setup sdkdir="path.to.dir" />

    <rbm-create-avd name="emulator-2.2" target="2.2" force="true" >
        <sdcard size="1" />
        <screen resolution="100x100" density="160;mdpi;hdpi;etc" />
        <snapshot enable="true" />
        <hardware>
            <arg key="a" value="1" />
            <arg key="b" value="2" />
            <arg key="c" value="3" />
        </hardware>
    </rbm-create-avd>
    
    <rbm-start-emulator avd="test-avd" connect-timeout="100" boot-timeout="100" attempts="3">
        <arg value="--no-sound" />
        <arg value="--no-luck" />
    </rbm-start-emulator>
    
    <rbm-run-tests serial="serial" package="name" runner="name" >
        <apks fileset="">
            <tester file="" />
            <tested file="" />
            <dependency file="" />
            <dependency file="" />
            <dependency file="" />
            <dependency file="" />s
        </apks>
        <listeners>
            <junitlistener file="filename.ext"/>
            <listenerref id="" />
            <listener />
        </listeners>
        <args>
            <arg key="" value="" />
            <coverage enable="true" />
            <debug enable="true" />
            <size value="" />
            <logonly enable="true" />
        </args>
    </rbm-run-tests>
    
</project>